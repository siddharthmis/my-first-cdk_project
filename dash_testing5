import json

def y_axis_percent():
    return {
        "left": {"min": 0, "max": 100},
        "right": {"showUnits": False}
    }

def y_axis_count():
    return {
        "left": {"min": 0, "max": 1000},  # adjust as needed
        "right": {"showUnits": False}
    }

def build_patch_dashboard(data):
    widgets = []
    x, y = 0, 0

    if data:
        avg_percent = round(sum(d['Percent'] for d in data) / len(data), 2)
        widgets.append({
            "type": "text",
            "x": 0,
            "y": y,
            "width": 24,
            "height": 3,
            "properties": {
                "markdown": f"## ðŸ›¡ï¸ Patch Compliance: {avg_percent}% across {len(data)} account-region pairs"
            }
        })
        y += 3

    for entry in data:
        widgets.append({
            "type": "metric",
            "x": x,
            "y": y,
            "width": 6,
            "height": 6,
            "properties": {
                "metrics": [
                    ["CentralDashboards", "PatchCompliance", "AccountId", entry['AccountId'], "Region", entry['Region']]
                ],
                "view": "gauge",
                "stat": "Average",
                "region": "us-east-1",
                "title": f"{entry['AccountName']} [{entry['Region']}] Patch %",
                "yAxis": y_axis_percent()
            }
        })
        x += 6
        if x >= 24:
            x = 0
            y += 6

    metrics = []
    for entry in data:
        metrics.append(["CentralDashboards", "CompliantInstanceCount", "AccountId", entry['AccountId'], "Region", entry['Region']])
        metrics.append(["...", "NonCompliantInstanceCount", "AccountId", entry['AccountId'], "Region", entry['Region']])
    widgets.append({
        "type": "metric",
        "x": 0,
        "y": y + 1,
        "width": 24,
        "height": 6,
        "properties": {
            "metrics": metrics,
            "view": "bar",
            "stacked": True,
            "stat": "Sum",
            "region": "us-east-1",
            "title": "Compliant vs Non-Compliant Instances",
            "yAxis": y_axis_count()
        }
    })

    for entry in data:
        widgets.append({
            "type": "metric",
            "x": 0,
            "y": y + 8,
            "width": 6,
            "height": 6,
            "properties": {
                "metrics": [
                    ["CentralDashboards", "StalePatchInstanceCount", "AccountId", entry['AccountId'], "Region", entry['Region']]
                ],
                "view": "gauge",
                "stat": "Sum",
                "region": "us-east-1",
                "title": f"{entry['AccountName']} [{entry['Region']}] Stale >30d",
                "yAxis": y_axis_count()
            }
        })

    return json.dumps({"widgets": widgets})
